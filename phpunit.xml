<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="test/bootstrap.php"
>
  <testsuites>
    <testsuite name="Eden Handlebars Test Suite">
      <file>test/Context.php</file>
      <file>test/Engine.php</file>
      <file>test/HelperCollection.php</file>
      <file>test/Index.php</file>
      <file>test/Parser.php</file>
      <file>test/Template.php</file>
	  <file>test/functional.php</file>
	  <file>test/helpers.php</file>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory suffix=".php">./</directory>
    </whitelist>
  </filter>
</phpunit>